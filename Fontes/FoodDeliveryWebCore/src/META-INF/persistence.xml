<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="FoodDeliveryWebCorePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.fdw.negocio.entidades.Cep</class>
    <class>br.com.fdw.negocio.entidades.Prato</class>
    <class>br.com.fdw.negocio.entidades.Estabelecimento</class>
    <class>br.com.fdw.negocio.entidades.Cliente</class>
    <class>br.com.fdw.negocio.entidades.Funcionamento</class>
    <class>br.com.fdw.negocio.entidades.PedidoItem</class>
    <class>br.com.fdw.negocio.entidades.EstabelecimentoFormaPagamento</class>
    <class>br.com.fdw.negocio.entidades.EstabelecimentoCep</class>
    <class>br.com.fdw.negocio.entidades.FormaPagamento</class>
    <class>br.com.fdw.negocio.entidades.Cardapio</class>
    <class>br.com.fdw.negocio.entidades.Pedido</class>
    <properties>
      <property name="hibernate.connection.username" value="root"/>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="hibernate.connection.password" value=""/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/fdw"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
    </properties>
  </persistence-unit>
</persistence>
